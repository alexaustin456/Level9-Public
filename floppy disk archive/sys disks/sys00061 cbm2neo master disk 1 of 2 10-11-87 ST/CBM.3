displaydecimal(number)
int number ;
{ int digit ;
  int index ;
  if ( number == 0 )
       prs ("0") ;
  else { for ( index = 1 ; (index*10) <= number ; index *= 10 ) ;
         for ( ; index > 0 ; )
           { digit = (int) ( number / index ) ;
             putch ( (char) (48 + digit) ) ;
             number = number - ( digit * index ) ;
             index = (int) (index / 10) ;
           }
       }
}

